.top-section
  %header
    %nav
      %ul
        %li.home-button= link_to "Back to home", root_path
        %li.title Webfont
.mid-section
  .wrapper
    %h1 What mood are you attempting to create?
    .slider-container
      = form_tag("/pairs/mood", method: "post") do
        .mood-list-left
          %h3 Playful
          %h3 Light
          %h3 Modern
          / %h3 Cold
        .sliders
          %input#slider1{"data-slider" => "true", "data-slider-range" => "1,5", "data-slider-snap" => "true", "data-slider-step" => "1", :type => "hidden", "name" => "slider1"}/
          %input#slider2{"data-slider" => "true", "data-slider-range" => "1,5", "data-slider-snap" => "true", "data-slider-step" => "1", :type => "hidden", "name" => "slider2"}/
          %input#slider3{"data-slider" => "true", "data-slider-range" => "1,5", "data-slider-snap" => "true", "data-slider-step" => "1", :type => "hidden", "name" => "slider3"}/
        .mood-list-right
          %h3 Serious
          %h3 Dramatic
          %h3 Classical
          // %h3 Warm
        %button.button.expand.radius{ type:"submit" } Create Results
    %h1
      = @pairs.first.body_font

.btm-section
  %footer
    %nav.crumbs
      %ul
        = link_to "Tone", "/pairs/tone.html", class: "active"
        = link_to "Mood", "#", class: "active"
        = link_to "Results", "#"
        = link_to "Export", "#"
